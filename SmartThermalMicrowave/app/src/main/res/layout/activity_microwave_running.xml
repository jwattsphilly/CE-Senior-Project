<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:gravity="center">
    <TextView
        android:id="@+id/text_box_counter_text"
        android:text="Counter Text"
        android:textSize="80dp"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_box_stir_text"
        android:text="Stir Text"
        android:textColor="#FFF"
        android:textSize="50dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        style="@style/MediumButton"
        android:id="@+id/btn_start_stop"
        android:text="Start"
        android:onClick="startStopOnClick"/>

    <ToggleButton
        style="@style/MediumButton"
        android:id="@+id/btn_motor_control_microwave_running"
        android:textOff="Stop Plate"
        android:textOn="Start Plate"
        android:onClick="togglePlate"/> <!--This is in a different .java file. Intersting... -->

</LinearLayout>