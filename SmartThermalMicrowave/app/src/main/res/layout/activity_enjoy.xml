<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#FF000000">

    <TextView
        android:id="@+id/text_view_enjoy_view"
        android:text="@string/title_activity_enjoy"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80dp"
        android:textColor="#fff" />

    <Button
        style="@style/MediumButton"
        android:id="@+id/btn_add_30"
        android:text="@string/button_add_30"
        android:onClick="addThirty"/>

    <ToggleButton
        style="@style/MediumButton"
        android:id="@+id/btn_motor_control"
        android:textOff="@string/button_motor_toggle_initial"
        android:textOn="@string/button_motor_toggle_pressed"
        android:onClick="togglePlate"/>

</LinearLayout>